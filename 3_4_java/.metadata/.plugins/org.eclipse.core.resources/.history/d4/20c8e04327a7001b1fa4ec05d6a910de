// main.js

import random from './JS/basic.js'

// 삼항연산자
const ab = 1>2

if(ab) {
	console.log('참~~')
}
else {
	console.log('삐삐삐삐삐 거짓')
}

console.log(ab ? '참참참' : '구라임')


//--------------------------------------------------//

// 논리연산자
const su = 1 === 1
const str = 'AB' === 'AB'
const c = true

console.log(su)
console.log(str)
console.log(c)
console.log("\n")

console.log('&& : ', su && str && c)
console.log('|| : ', su || str || c)
console.log('|| : ', su || str)

//--------------------------------------------------//

// 비교연산자
const x=1
const y=3

console.log(x!==y)

function isEqual(x,y){
	return x===y
}

//--------------------------------------------------//

// 할당연산자
let i = 2
i += 1

console.log(i)

//--------------------------------------------------//

// 산술연산자
console.log(1+2)
console.log(5-2)
console.log(9/2)
console.log(7*6)

//--------------------------------------------------//

// 메소드 체인 방식
const a = 'Hello'
const b = a.split('').reverse().join()
// split : 문자를 인수 기준으로 쪼개서 배열로 반환
// reverse : 배열을 뒤집기(역으로 출력)
// join : 배열을 인수 기준으로 문자로 병합해 반환

console.log(a)
console.log(b)

